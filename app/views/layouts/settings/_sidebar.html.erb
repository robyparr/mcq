<div class="hidden md:flex flex-col justify-between fixed pin-t pin-b h-full
            border-r-2 bg-white w-2/12" style="min-width: 200px;">
  <div>
    <div class="text-center pt-4">
      <h1 class="text-2xl">
        <%= link_to 'MCQ Settings', root_path, class: 'text-black hover:text-black' %>
      </h1>
      <span class="text-muted"><%= current_user.email %></span>

      <%= link_to 'Back to App', root_url, class: 'button primary inline-block w-3/4 mt-4' %>
    </div>

    <div class="p-4 mt-6">
      <ul class="navigation">
        <li>
          <%= active_link_to user_profile_path do %>
            <div class="media-item">
              <i data-feather="user" class="inline mr-4"></i>
              Profile
            </div>
          <% end %>
        </li>
        <li>
          <%= active_link_to media_priorities_path do %>
            <div class="media-item">
              <i data-feather="sliders" class="mr-4"></i>
              Priorities
            </div>
          <% end %>
        </li>
        <li>
          <%= active_link_to integrations_path do %>
            <div class="media-item">
              <i data-feather="git-branch" class="mr-4"></i>
              Integrations
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
