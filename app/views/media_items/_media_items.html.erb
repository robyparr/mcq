<table>
  <thead>
    <tr>
      <th>Media</th>
      <th>Queue</th>
      <th>Created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% media_items.each do |media_item| %>
      <tr>
        <td>
          <span class="text-lg">
            <%= link_to media_item.title_or_url, media_item_path(media_item) %>
          </span>
          <%= external_link_to media_item.url, media_item.url, class: 'text-muted block' %>
        </td>
        <td><%= media_item.queue.name %></td>
        <td><%= media_item.created_at %></td>
        <td class="actions">
          <%= link_to 'Edit', edit_media_item_path(media_item) %>
          <%= link_to 'Delete', media_item_path(media_item),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
