<h1 class="page-header">New Link</h1>

<%= form_with model: @link do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'Title' %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: 'Description' %>

  <%= f.label :url %>
  <%= f.text_field :url, placeholder: 'URL' %>

  <%= f.submit class: 'button' %>
<% end %>
