<div data-controller="bulk-actions">
  <h2 class="page-header">Media</h2>

  <div class="toolbar mb-4">
    <%= link_to 'Add Media', new_media_item_path, class: 'button' %>

    <% if current_user.pocket_integration.present? %>
      <%= link_to 'Synchronize Pocket',
                  synchronize_integrations_path(integration_id: current_user.pocket_integration.id),
                  class: 'button',
                  method: :post %>
    <% end %>

    <%= render 'bulk_actions', queues: @queues %>
  </div>

  <%= render 'filters', search_path: media_items_path, priorities: @priorities %>

  <%= render 'media_items', media_items: @media_items %>
</div>
