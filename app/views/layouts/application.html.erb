<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/shared/head' %>
  </head>

  <body>
    <div class="flex relative w-screen h-screen overflow-x-hidden">
      <div class="w-0 md:w-2/12 style="min-width: 200px;">
        <%= render 'layouts/shared/sidebar' %>
      </div>
      <div class="w-full md:w-10/12">
        <%= render 'layouts/shared/header' %>

        <main class="py-2 px-3 md:py-8 md:px-20">
          <%= yield %>
        </main>
      </div>
    </div>

    <%= turbo_frame_tag 'toast-container', class: 'toast-container' do %>
      <% flash.each do |key, value| %>
        <%= turbo_stream_toast value, type: key == 'notice' ? :info : key %>
      <% end %>
    <% end %>
  </body>
</html>
